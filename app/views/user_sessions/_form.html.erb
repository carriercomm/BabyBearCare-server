<%= semantic_form_for @user_session, url: user_session_path do |f| %>
  <%= f.inputs name: "Login" do %>
    <%= f.input :login %>
    <%= f.input :password %>
    <%= f.input :remember_me, :as => :boolean %>
  <% end %>
  <%= f.actions do -%>
    <%= f.action :submit, label: "Login", button_html: { class: "btn btn-primary" } %>
  <%- end -%>
<% end %>
