<h1>User Roles</h1>

<%- @users.each do |user| -%>
<h3>
  <%= user.login %>, <%= user.email %>
</h3>
<%= semantic_form_for user do |f| %>
  <%= f.inputs do %>
    <%= f.input :roles, :as => :check_boxes %>
    <%= f.actions do %>
      <%= f.action :submit, as: :button, button_html: { class: "btn btn-primary" } %>
    <% end %>
  <% end %>
<% end %>
<%- end -%>