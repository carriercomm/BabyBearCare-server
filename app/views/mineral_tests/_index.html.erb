<thead>
<tr>
  <th>Test date</th>
  <th>Mineral</th>
  <th>Level (mg/L)</th>
  <th colspan="3"></th>
</tr>
</thead>
<tbody>
  <% @mineral_tests.each do |mineral_test| %>
    <tr>
      <td><%= mineral_test.test_date.strftime("%B %Y") %></td>
      <td><%= mineral_test.mineral.name %></td>
      <td><%= mineral_test.measurement %></td>
      <td><%= link_to 'Show', mineral_test %></td>
      <td><%= link_to 'Edit', edit_mineral_test_path(mineral_test) %></td>
      <td><%= link_to 'Destroy', mineral_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>