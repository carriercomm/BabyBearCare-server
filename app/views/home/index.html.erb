<%- if logged_in? -%>
  <h1>Welcome <%= current_user.login %></h1>
<%- else -%>
<div class="jumbotron center">
  <h1>Hello! Welcome to Baby Bear Care</h1>
  <div class="row">
    <div class="col-md-12">
     <%= link_to image_tag("bears-color.jpg"), root_path, class: "img-responsive center-block" %>
    </div>
  </div>
  <p>Log in to continue</p>
  <div class="row">
    <div class="col-md-5">
      <%= link_to "Login", login_path, class: "btn btn-lg btn-block btn-success" %>
    </div>
    <div class="col-md-5 col-md-offset-2">
      <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-block btn-success" %>
    </div>
  </div>
</div>
<%- end -%>