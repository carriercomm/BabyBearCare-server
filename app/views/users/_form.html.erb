<%= semantic_form_for(@user) do |f| %>
  <%= f.inputs do %>
    <%= f.input :login %>
    <%= f.input :email %>
    <%= f.input :postal_code %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.actions do -%>
    <%= f.action :submit, label: "Save", button_html: { class: "btn btn-primary" } %>
  <%- end -%>
<% end %>
